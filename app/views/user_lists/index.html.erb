<p id="notice"><%= notice %></p>

<div class="container-fluid">

  <h2 class="text-center p-3 text-uppercase">User Lists</h2>
  <div class="table-responsive text-center">
    <table class="table table-striped table-hover border border-dark">
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Is active</th>
          <th>Start date</th>
          <th>End date</th>
          <th>Monthly charge</th>
          <th>Email</th>
          <th>User role</th>
          <th>Company</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @user_lists.each do |user_list| %>
          <tr>
            <td><%= user_list.first_name %></td>
            <td><%= user_list.last_name %></td>
            <td><%= user_list.is_active %></td>
            <td><%= user_list.start_date %></td>
            <td><%= user_list.end_date %></td>
            <td><%= user_list.monthly_charge %></td>
            <td><%= user_list.email %></td>
            <td><%= user_list.user_role %></td>
            <td><%= user_list.company_id %></td>
            <td><%#= link_to 'Edit', edit_user_list_path(user_list) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%#= link_to 'New User List', new_user_lists_path %>
