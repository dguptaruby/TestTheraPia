<%= form_with(model: user_list) do |f| %>
  <% if user_list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user_list.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user_list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :startDate %><br />
    <%= f.date_field :start_date, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :startDate %><br />
    <%= f.date_field :end_date, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :monthly_charge %><br />
    <%= f.number_field :monthly_charge, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div>
     <%= f.label :company_name %>
     <%= f.collection_select :company_id, Company.order(:id), :id, :company_name %>
  </div>

   <div class="field">
    <%= f.label :Roll %><br />
    <%= f.select :user_role, User::USER_ROLES.keys.to_a %>
  </div>
  <div class="field">
    <%= f.label :active %>
    <%= f.check_box :is_active %>
  </div>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :notes %>
    <%= f.rich_text_area :notes %>
  </div>
 <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
