      <div>
         <%= form.label :region, class: 'form-label' %>
         <%= form.collection_select :region_id, Region.order(:id), :id, :region_name %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>