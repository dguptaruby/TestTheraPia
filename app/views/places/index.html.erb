<p id="notice"><%= notice %></p>
<div class="container">
  <div class="d-flex align-items-center justify-content-center position-relative">
    <h2 class="text-center p-3 text-uppercase">Places</h2>
    <%= link_to 'New Place', new_place_path, class: 'position-absolute end-0 bg-primary px-4 py-2 text-white rounded-3 mr-2 text-decoration-none' %>
  </div>
  <div class="table-responsive text-center">
    <table class="table table-striped table-hover border border-dark">
      <thead>
        <tr>
          <th>Place name</th>
          <th>Node name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @places.each do |place| %>
          <tr>
            <td><%= place.place_name %></td>
            <td><%= place.node_name %></td>
            <td><%= link_to 'Show', place %></td>
            <td><%= link_to 'Edit', edit_place_path(place) %></td>
            <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>  
<br>

