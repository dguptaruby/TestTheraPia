<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <h2 class="text-center p-3 text-uppercase">Regions</h2>
  <div class="table-responsive text-center">
    <table class="table table-striped table-hover border border-dark">
      <thead>
        <tr>
          <th>Region name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @regions.each do |region| %>
          <tr>
            <td><%= region.region_name %></td>
            <td><%= link_to 'Show', region %></td>
            <td><%= link_to 'Edit', edit_region_path(region) %></td>
            <td><%= link_to 'Destroy', region, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Region', new_region_path %>
